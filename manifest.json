{
  "manifest_version": 3,
  "name": "Amazon Order Hider",
  "version": "2.0.2",
  "description": "Hide Amazon orders from your order history",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage", "activeTab", "tabs", "clipboardRead"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Amazon Order Hider"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/gp/your-account/order-history*",
        "*://*.amazon.com/gp/css/order-history*",
        "*://*.amazon.com/your-orders/orders*",
        "*://*.amazon.co.uk/gp/your-account/order-history*",
        "*://*.amazon.co.uk/gp/css/order-history*",
        "*://*.amazon.co.uk/your-orders/orders*",
        "*://*.amazon.de/gp/your-account/order-history*",
